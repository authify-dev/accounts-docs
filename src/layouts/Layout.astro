---
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <h1>{title}</h1>
        </header>
        <main>
            <slot />
        </main>
        <footer>
            <p>&copy; {new Date().getFullYear()} Mi Sitio Web</p>
        </footer>
    </body>
</html>
